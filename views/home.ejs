<%- include('partials/header') %>
<h1>Home</h1>
<p><%= homeStartingContent %></p>

<%# loop through posts and print out each post as a title and body %>
<% posts.forEach(post=> { %>
    <h1>
        <%= post.title %>
    </h2>
    <p>
        <%= post.body.slice(0,100) %> <a class="continue-article" href="posts/<%= post.title %>"> ... Read More</a>
        <a href="posts/<%= post._id %>">use ID for article</a>
    </p>
    <% }) %>


<%- include('partials/footer') %>



